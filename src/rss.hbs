<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>{{site.company}}</title>
        <link>{{site.url}}</link>
        <language>en-us</language>
        <copyright>Copyright 2020 Spencer Kittleson</copyright>
        <ttl>30</ttl>
        <atom:link href="{{site.url}}/rss.xml" rel="self" type="application/rss+xml" />
        {{#each posts}}
        <item>
            <title>{{this.title}}</title>
            <description>{{this.description}}</description>
            <link>{{../site.url}}/{{blogPath this.file}}</link>
            <guid>{{../site.url}}/{{blogPath this.file}}</guid>
            <pubDate>{{this.date}}</pubDate>
            <media:content medium="image" url="{{imagePath this.image ../site.url}}" />
        </item>
        {{/each}}
    </channel>
</rss>