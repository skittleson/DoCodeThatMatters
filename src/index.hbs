{{> header}}

<main class="container">
    <div class="row">
        <div class="col-lg-8">
            <h1>What's New?</h1>
            {{#each posts}}
            <span title='{{this.date}}'>{{formatDate this.date}}</span> <br />
            <h2>
                <a class="text-primary" href="{{blogPath this.file}}">{{this.title}}</a>
            </h2>
            <p>
                {{this.description}}
            </p>
            <hr />
            {{/each}}

        </div>
        <div class="col-lg-4">
            <img src="../images/agile.jpg" width="350" height="246" alt="Agile development" />
            <br />
            {{> contactInfo}}
        </div>
    </div>
</main>
{{>footer}}